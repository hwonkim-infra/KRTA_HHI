<!-- ===============================================-->
<!--    주행 및 등판능력    -->
<!-- ===============================================-->
<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0">주행, 등판 능력</h5>
    </div>
    <div class="card-body bg-light">

        <div class="row gx-2">

            <div class="input-group  mb-3">

                <span class="input-group-text">주행 펌프 유량 </span>
                <input class="form-control" id="pump_displacement_travel" name="pump_displacement_travel"
                    type="number" step="any" value="<% if (editing){ %><%= product.travel.pump_displacement %><% } %>"
                    placeholder="유량 (Q. l/min)" />
                <span class="input-group-text">주행 펌프 압력</span>
                <input class="form-control" id="travel_pump_pressure" name="travel_pump_pressure" type="number"
                    step="any" value="<% if (editing){ %><%= product.travel.pump_pressure %><% } %>"
                    placeholder="압력 (P. bar)" />
            </div>


            <div class="input-group  mb-3">
                <span class="input-group-text">모터 용적 (Q<sub>m1/m2</sub>)</span>
                <input class="form-control" id="TM_flow_1" name="TM_flow_1" type="number" step="any"
                    value="<% if (editing){ %><%= product.travel.TM_flow_1 %><% } %>" placeholder="1속" />
                <input class="form-control" id="TM_flow_2" name="TM_flow_2" type="number" step="any"
                    value="<% if (editing){ %><%= product.travel.TM_flow_2 %><% } %>" placeholder="2속" />
            </div>


            <div class="input-group  mb-3">
                <span class="input-group-text">모터 용적 효율 (μ<sub>mv</sub>) </span>
                <input class="form-control" id="TM_mv" name="TM_mv" type="number" step="any" min="0" max="1"
                    value="<% if (editing){ %><%= product.travel.TM_mv %><% } %>" placeholder="모터 용적 효율" />
                <span class="input-group-text">모터 기계 효율 (μ<sub>mt</sub>) </span>
                <input class="form-control" id="TM_mt" name="TM_mt" type="number" step="any" min="0" max="1"
                    value="<% if (editing){ %><%= product.travel.TM_mt %><% } %>" placeholder="모터 기계 효율" />
                <span class="input-group-text">동력 전달 효율 (μ<sub>r</sub>)</span>
                <input class="form-control" id="TM_r" name="TM_r" type="number" step="any" min="0" max="1"
                    value="<% if (editing){ %><%= product.travel.TM_r %><% } %>" placeholder="동력 전달 효율" />
            </div>

            <div class="input-group  mb-3">
                <span class="input-group-text">구동 점착 계수 (μ<sub></sub>) </span>
                <input class="form-control" id="surface_drag" name="surface_drag" type="number" step="any" min="0"
                    max="1" value="<% if (editing){ %><%= product.travel.surface_drag %><% } %>" placeholder="0~1" />
                <span class="input-group-text">주행 저항 계수 (ξ)</span>
                <input class="form-control" id="travel_drag" name="travel_drag" type="number" step="any" min="0" max="1"
                    value="<% if (editing){ %><%= product.travel.drag %><% } %>" placeholder="0~1" />
            </div>


            <div class="input-group  mb-3">
                <span class="input-group-text">주행감속비</span>
                <input class="form-control" id="travel_reduc" name="travel_reduc" type="number" step="any"
                    value="<% if (editing){ %><%= product.travel.reduc %><% } %>" placeholder="주행감속비" />
                <span class="input-group-text">스프로켓 반경 (R)</span>
                <input class="form-control" id="sprocket_radius" name="sprocket_radius" type="number" step="any"
                    value="<% if (editing){ %><%= product.travel.sprocket_radius %><% } %>" placeholder="스프로켓 반경(㎜)" />
            </div>

            <div class="input-group  mb-3">
                <span class="input-group-text">기준등판각도 (θ<sub>ref</sub>)</span>
                <input class="form-control" id="greadability_ref" name="greadability_ref" type="number"
                    value="<% if (editing){ %><%= product.travel.greadability_ref %><% } %>" placeholder="" />
                <span class="input-group-text">브레이크 토크 (T<sub>b</sub>)</span>
                <input class="form-control" id="brake_torque" name="brake_torque" type="number" step="any"
                    value="<% if (editing){ %><%= product.travel.brake_torque %><% } %>" placeholder="" />
            </div>

                        
            <div class="row gx-2">
                <label class="form-label" for="travel_reduction_description">주행 감속비 계산 자료
                </label>
                <textarea name="travel_reduction_description"
                    class="form-control tinymce d-none"><% if (editing){ %><%= product.description.travel_reduction %><% } %></textarea>
            </div>


        </div>
    </div>
</div>