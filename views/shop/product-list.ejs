<%- include('../includes/head.ejs') %>


<%- include('../includes/navigation.ejs') %>
<!-- ===============================================-->
<!--    Main Contents    -->
<!-- ===============================================-->
<div class="row g-0">

    <div class="col-lg-12 ps-lg-2 mb-3">
        <div class="card h-lg-100">
            <div class="card-header">
                <div class="row flex-between-center">
                    <div class="col-auto">
                        <h6 class="mb-0">Product List</h6>
                    </div>
                    <div class="col-auto d-flex">
                        <select class="form-select form-select-sm select-month me-2">
                            <option value="0">January</option>
                            <option value="1">February</option>
                            <option value="2">March</option>
                            <option value="3">April</option>
                            <option value="4">May</option>
                            <option value="5">Jun</option>
                            <option value="6">July</option>
                            <option value="7">August</option>
                            <option value="8">September</option>
                            <option value="9">October</option>
                            <option value="10">November</option>
                            <option value="11">December</option>
                        </select>

                    </div>
                </div>
            </div>

            <% if (prods.length > 0) { %>
            <div class="row g-0">
                <% for (let product of prods) { %>

                <div class="col-12 p-card">
                <div class="col-12 p-card">

                    <div class="row">
                        <div class="col-sm-5 col-md-4">
                            <div class="position-relative h-sm-100"><a class="d-block h-100"
                                    href=""><img
                                        class="img-fluid fit-cover w-sm-100 h-sm-100 rounded-1 absolute-sm-centered"
                                        src="<%= product.imageURL %>" alt="<%= product.title %>"></a>
                            </div>
                        </div>
                        <div class="col-sm-7 col-md-8">
                            <div class="row">
                                <div class="col-lg-8">
                                    <h5 class="mt-3 mt-sm-0">
                                        <a class="text-dark fs-0 fs-lg-1" href="">
                                            <%= product.title %>
                                        </a>
                                    </h5>
                                    <ul class="list-unstyled d-none d-lg-block">
                                        <li>
                                            <span><%= product.description %></span></li>

                                    </ul>
                                </div>
                                <div class="col-lg-4 d-flex justify-content-between flex-column">
                                    <div>
                                        <h4 class="fs-1 fs-md-2 text-warning mb-0">$
                                            <%= product.price %>
                                        </h4>
                                    </div>

                                    <div class="mt-2">
                                        <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0"
                                            href="/products/<%= product.id %>">

                                            <span class="ms-2 d-none d-md-inline-block">Details</span>
                                        </a>
                                        <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0"
                                            href="/admin/edit-product">
                                            <form action="/admin/delete-product" method="post">
                                                <span class="ms-2 d-none d-md-inline-block" type="submit">Delete</span>
                                            </form>
                                        </a>

                                        <a class="btn btn-sm btn-primary d-lg-block mt-lg-2" href="#!">
                                            <form action="/add-to-cart" method="post">
                                                <span class="ms-2 d-none d-md-inline-block">Add to Cart</span>
                                            </form>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>



            </div>
            <% } else {%>
            <h1>No Products Found</h1>

            <% } %>
        </div>
    </div>
</div>

<!-- End of Main Content -->

<%- include('../includes/end.ejs') %>