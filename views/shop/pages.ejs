<%- include('../includes/head.ejs') %>


<%- include('../includes/navigation.ejs') %>
<!-- ===============================================-->
<!--    Main Contents    -->
<!-- ===============================================-->
<div class="row g-0">

    <div class="col-lg-12 ps-lg-2 mb-3">
        <div class="card h-lg-100">
            <div class="card mb-3">
            <div class="card-body">
              <div class="row flex-between-center">
                <div class="col-sm-auto mb-2 mb-sm-0">
                  <h4 class="mb-0">Korea TCF List</h4>
                </div>
                <div class="col-sm-auto">
                  <div class="row gx-2 align-items-center">
                    <div class="col-auto">
                        <a href="/admin/pagesOutput" class="btn btn-primary btn-sm me-1 mb-1" type="button" target="_blank">Print to Report</a>
                        <a href="/admin/add-page" class="btn btn-info btn-sm me-1 mb-1" type="button">Add Page </a>
                      
                    </div>
                    
                  </div>
                </div>
              </div>
            </div>
          </div>



            <% if (pages.length > 0) { %>
            <div class="row g-0">
                <% for (let page of pages) { %>

                <div class="col-12 p-card">
                    <div class="row">
                            <div class="col-sm-10">
                                <h5 class="mt-3 mt-sm-0">
                                    <a class="text-dark fs-0 fs-lg-1" href="">
                                        <%= page.title %>
                                    </a>
                                </h5>
                                <p>
                                    <%- page.description %>
                                </p>
                            </div>
                            <div class="col-sm-2 d-flex justify-content-between flex-column">

                                <div class="mt-2">
                                    <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0"
                                        href="/admin/edit-page/<%= page.id %>?edit=true">
                                        <span class="ms-2 d-none d-md-inline-block">Edit</span>
                                    </a>                                        
                                    <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0"
                                        href="/admin/edit-page/<%= page.id %>?edit=true">
                                        <form action="/admin/delete-page" method="post">
                                            <input type="hidden" name="pageId" value="<%= page.id %>" />
                                            <button class="ms-2 d-none d-md-inline-block" type="submit">Delete</button>
                                        </form>
                                    </a>

                                    

                                </div>
                            </div>

                    </div>
                </div>
                <% } %>



            </div>
            <% } else {%>
            <h1>No Pages Found</h1>

            <% } %>
        </div>
    </div>
</div>

<!-- End of Main Content -->

<%- include('../includes/end.ejs') %>