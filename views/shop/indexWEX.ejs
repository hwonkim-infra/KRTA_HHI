<%- include('../includes/head.ejs') %>


    <%- include('../includes/navigation.ejs') %>
        <!-- ===============================================-->
        <!--    Main Contents    -->
        <!-- ===============================================-->
        <div class="row g-0">

            <div class="col-lg-12 ps-lg-2 mb-3">
                <div class="card h-lg-100">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row flex-between-center">
                                <div class="col-sm-auto mb-2 mb-sm-0">
                                    <h4 class="mb-0">한국형식승인 (Wheel EX)</h4>
                                </div>
                                <div class="col-sm-auto">
                                    <div class="row gx-2 align-items-center">
                                        <div class="col-auto">
                                            <a href="/admin/add-WEX" class="btn btn-info btn-sm me-1 mb-1"
                                                type="button">Add New Model </a>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

<% if (prods.length> 0) { %>
    <div class="row g-">
        <% for (let product of prods) { %>

            <div class="col-12 p-card">

                    <div class="row col-sm-12">
                        <div class="row">
                            <div class="col">
                                <h5 class="mt-3 mt-sm-0">
                                    <a class="text-dark fs-0 fs-lg-1" href="">
                                        <%= product.model_name %>
                                            <% if (product.ChangeModel){ %> (변경) <% } %>
                                    </a>
                                </h5>
                                <ul class="list-unstyled d-none d-lg-block">
                                    <li><span>S/N <%= product.serial_no %></span>
                                    <span>Boom <%= product.attachments.boom_length %></span>
                                    
                                    <span>Arm <%= product.attachments.arm_length %></span>
                                    <span>Bucket <%= product.attachments.bucket_heap %></span>
                                    
                                    <span>
                                            <%= product.ETC %>
                                        </span></li>

                                </ul>
                            </div>
                            <div class="col-2 d-flex justify-content-between flex-column">

                                <div class="mt-2">
                                    <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0"
                                        href="/admin/edit-WEX/<%= product.id %>?edit=true">
                                        <span class="ms-2 d-none d-md-inline-block">수정</span>
                                    </a>

                                    <a class="btn btn-sm btn-primary  border-300 d-lg-block me-2 me-lg-0"
                                        href="/WEXs/<%= product._id %>/<% if(product.ChangeModel){ %><%= product.origin %> <% } %>"
                                        target="_blank">
                                        <span class="ms-2 d-none d-md-inline-block">출력</span>
                                    </a>

                                    <% if (!product.ChangeModel){ %>
                                        <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0"
                                            href="/admin/add-WEXChange/<%= product.id %>?change=true"
                                            target="_blank">

                                            <span class=" d-none d-md-inline-block">변경형식</span>

                                        </a>
                                        <% } %>

                                </div>
                            </div>
                        </div>
                    </div>
            </div>
            <% } %>



    </div>
    <% } else {%>
        <h1>No Products Found</h1>

        <% } %>
                </div>
            </div>
        </div>

        <!-- End of Main Content -->

        <%- include('../includes/end.ejs') %>