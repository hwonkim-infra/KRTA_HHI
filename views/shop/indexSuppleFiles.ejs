<%- include('../includes/head.ejs') %>


    <%- include('../includes/navigation.ejs') %>
        <!-- ===============================================-->
        <!--    Main Contents    -->
        <!-- ===============================================-->
        <div class="row g-0">

            <div class="col-lg-12 ps-lg-2 mb-3">
                <div class="card h-lg-100">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row flex-between-center">
                                <div class="col-sm-auto mb-2 mb-sm-0">
                                    <h4 class="mb-0">Korea TCF List (안전기준)</h4>
                                </div>
                                <div class="col-sm-auto">
                                    <div class="row gx-2 align-items-center">
                                        <div class="col-auto">
                                            <a href="/admin/add-file" class="btn btn-info btn-sm me-1 mb-1" type="button">Add New File </a>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% if (files.length > 0) { %>
                        <div class="row g-">
                            <% for (let file of files) { %>

                                <div class="col-6 p-card">
                                    <div class="row">

                                        <div class="row col-sm-12">
                                            <div class="row">
                                                <div class="col">
                                                    <h5 class="mt-3 mt-sm-0">
                                                        <a class="text-dark fs-0 fs-lg-1" href="">
                                                            <%= file.Filename %>
                                                        </a>
                                                    </h5>
                                                    <ul class="list-unstyled d-none d-lg-block">


                                                    </ul>
                                                </div>
                                                <div class="col-sm-4 d-flex justify-content-between flex-column">

                                                    <div class="mt-2">
                                                        <a class="btn btn-sm btn-outline-secondary border-300 d-lg-block me-2 me-lg-0" href="/admin/edit-File/<%= file._id %>?edit=true">
                                                            <span class="ms-2 d-none d-md-inline-block">Edit</span>
                                                        </a>


                                                        <a class="btn btn-sm btn-primary  border-300 d-lg-block me-2 me-lg-0" href="/SuppleFiles/<%= file._id %>" target="_blank">
                                                            <span class="ms-2 d-none d-md-inline-block">Print</span>
                                                        </a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% } %>



                        </div>
                        <% } else {%>
                            <h1>No Files Found</h1>

                            <% } %>
                </div>
            </div>
        </div>

        <!-- End of Main Content -->

        <%- include('../includes/end.ejs') %>