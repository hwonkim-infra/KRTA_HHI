<%- include('../includes/head.ejs') %>


    <%- include('../includes/navigation.ejs') %>

        <!-- ===============================================-->
        <!--    Main Contents    -->
        <!-- ===============================================-->
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script>
            tinymce.init({
                selector: 'textarea'
            });
        </script>
        <div class="row g-0">

            <div class="col-lg-12 ps-lg-2 mb-3">
                <div class="card h-lg-100">
                    <div class="card-header">
                        <div class="row flex-between-center">
                            <div class="col-auto">
                                <h6 class="mb-0">
                                    <% if (editing){ %>Edit Document
                                        <% } else { %>Add Document
                                            <% } %>
                                </h6>
                            </div>
                        </div>
                    </div>
                    <div class="card-body h-100 pe-0">

                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="mb-0">Document Information</h5>
                            </div>
                            <div class="card-body bg-light">
                                <% if (errorMessage) { %>
                                    <div class="user-message user-message--error">
                                        <%= errorMessage %>
                                    </div>
                                    <% } %>
                                        <form class="document-form" action="/admin/<% if (editing){ %>edit-document<% } else { %>add-document<% } %>" method="POST" enctype="multipart/form-data">
                                            <div class="row gx-2">
                                                <div class="col-12 mb-3">
                                                    <label class="form-label" for="title">Title</label>
                                                    <input class="form-control" id="title" name="title" type="text" value="<% if (editing){ %><%= document.title %><% } %>" placeholder="Title" />
                                                </div>


                                                <div class="col-sm-6 mb-3">
                                                    <label class="form-label" for="image">Image</label>
                                                    <input class="form-control" id="image" name="image" type="file" />
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label" for="description">Description</label>
                                                    <textarea class="form-control" id="description" name="description" type="text" rows="6"><% if (editing){ %><%= document.description %><% } %></textarea>
                                                </div>
                                            </div>
                                            <% if (editing){ %>
                                                <input type="hidden" value="<%= document.id %>" name="documentId">
                                                <% } %>
                                                    <button class="btn btn-link btn-sm btn p-0" type="submit">  <% if (editing){ %> Update Document <% } else { %>Add Document<% } %></button>
                                                    <a href="/" class="btn btn-warning">Cancel</a>

                                        </form>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

        <!-- End of Main Content -->

        <%- include('../includes/end.ejs') %>