<%- include('../includes/head.ejs') %>
<script src="/vendors/tinymce/tinymce.min.js"></script>
<script type="text/javascript">
        tinymce.init({
            selector: 'textarea',
            plugins: 'save',
            height : "960"

        });
</script>

<%- include('../includes/navigation.ejs') %>
<!-- ===============================================-->
<!--    Main Contents    -->
<!-- ===============================================-->
<div class="row g-0">

    <div class="col-lg-12 ps-lg-2 mb-3">
        <div class="card h-lg-100">
            <div class="card-header">
                <div class="row flex-between-center">
                    <div class="col-auto">
                        <h6 class="mb-0">
                            <% if (editing){ %>Edit File
                            <% } else { %>Add File
                            <% } %>
                        </h6>
                    </div>
                </div>
            </div>
            <div class="card-body h-100 pe-0">
                <form class="page-form"
                    action="/admin/<% if (editing){ %>edit-File<% } else { %>add-File<% } %>" method="POST">
            

                    <!-- ===============================================-->
                    <!--     공통 항목 입력 페이지    -->
                    <!-- ===============================================-->
                    <div class="card mb-3">
                        
                        <div class="card-body bg-light">
                            <div class="col-sm-6 mb-3">
                                        <label class="form-label" for="title">제목</label>
                                        <input class="form-control" id="title" name="title" type="text"
                                            value="<% if (editing){ %><%= files.title %><% } %>"
                                            placeholder="규정이나 항목" />
                            </div>
                            <div class="row gx-2">                                    
                                    <textarea name="description" class="form-control tinymce d-none" ><% if (editing){ %><%= files.description %><% } %></textarea>
                            </div>
                        </div>
                    </div>




                    <% if (editing){ %>
                    <input type="hidden" value="<%= files.id %>" name="fileId">
                    <% } %>
                    <button class="btn btn-link btn-sm btn p-0" type="submit"> <% if (editing){ %> Update page
                        <% } else { %>Add page<% } %></button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- End of Main Content -->

<%- include('../includes/end.ejs') %>